<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5EEE7">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brave_cookie_cookietab"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/signup_name"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_background"
        android:fontFamily="@font/cookierun_regular"
        android:hint="Name"
        android:paddingLeft="50dp"
        android:textColorHint="#E3B88D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_background"
        android:fontFamily="@font/cookierun_regular"
        android:hint="email"
        android:paddingLeft="50dp"
        android:textColorHint="#E3B88D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_name" />

    <EditText
        android:id="@+id/signup_pw"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:inputType="textPassword"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/login_background"
        android:fontFamily="@font/cookierun_regular"
        android:hint="Password"
        android:paddingLeft="50dp"
        android:textColorHint="#E3B88D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_email" />

    <EditText
        android:id="@+id/signup_pw_confirm"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="56dp"
        android:layout_marginTop="100dp"
        android:inputType="textPassword"
        android:background="@drawable/login_background"
        android:fontFamily="@font/cookierun_regular"
        android:hint="Password Confirm"
        android:paddingLeft="50dp"
        android:textColorHint="#E3B88D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_email" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="408dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_pw" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="484dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_pw" />

    <View
        android:id="@+id/signupButton"
        android:layout_width="219dp"
        android:layout_height="81dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:background="@drawable/sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_pw_confirm" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:fontFamily="@font/cookierun_regular"
        android:textSize="40sp"
        android:textColor="#EACEB2"
        app:layout_constraintBottom_toBottomOf="@+id/signupButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signupButton" />

    <TextView
        android:id="@+id/checking_button"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:background="@drawable/check"
        android:text="중복확인"
        android:fontFamily="@font/cookierun_regular"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/signup_email"
        app:layout_constraintEnd_toEndOf="@+id/signup_email"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="@+id/signup_email"
        app:layout_constraintTop_toTopOf="@+id/signup_email"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>