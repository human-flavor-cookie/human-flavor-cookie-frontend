<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/logout_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="달리기 결과"
        android:textColor="@color/black"
        android:fontFamily="@font/cookierun_regular"
        android:layout_marginBottom="15dp"
        android:textSize="25sp"/>



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cookierun_regular"
                android:text="시간"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cookierun_regular"
                android:text="거리"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/average_pace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cookierun_regular"
                android:text="평균 페이스"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cookierun_regular"
                android:text="획득 코인"
                android:textColor="#000000"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cookierun_regular"
                android:text="00:00:00"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/distance_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cookierun_regular"
                android:text="0.00km"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/average_pace_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cookierun_regular"
                android:text="9' 22''"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/coin_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cookierun_regular"
                android:text="0"
                android:textColor="#000"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/end_running_button"
        android:fontFamily="@font/cookierun_regular"/>
</LinearLayout>
